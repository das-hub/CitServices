<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/twitter-bootstrap/css/bootstrap.css" rel="stylesheet" />
</head>
<body>
    <h3 class="bg-primary p-2 text-white text-left">@ViewBag.Title : @ViewBag.Header</h3>
    <div class="container-fluid">
        <div class="row">
            <div class="col-2" style="background-color:lavenderblush;">@await Component.InvokeAsync("Departments")</div>
            <div class="col-10">@RenderBody()</div>
        </div>
    </div>
    <h3 class="bg-primary p-2 text-white"></h3>
</body>
</html>
